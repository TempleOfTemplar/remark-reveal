{
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"isolatedModules": true,
		"noImplicitAny": false
	},
	"include": ["src", "test"],
	"exclude": ["node_modules", "dist"]
}
